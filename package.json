{
  "name": "build-a-random-quote-machine",
  "version": "1.0.0",
  "main": "index.js",
  "repository": {},
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.18.8",
    "eslint": "^3.15.0",
    "eslint-config-semistandard": "^7.0.0",
    "eslint-config-standard": "^6.2.1",
    "eslint-plugin-promise": "^3.4.1",
    "eslint-plugin-react": "^6.9.0",
    "eslint-plugin-standard": "^2.0.1",
    "node-sass": "^4.5.0",
    "npm-run-all": "^4.0.1",
    "onchange": "^3.2.1"
  },
  "scripts": {
    "clean": "rm -rf css/*.css",
    "css": "node-sass -o css scss",
    "lint": "eslint js",
    "serve": "browser-sync start --server --files '*.html, css/*.css, js/*.js'",
    "watch:css": "onchange 'scss/*' -- yarn run css",
    "watch": "npm-run-all -p serve watch:css"
  },
  "eslintConfig": {
    "extends": "semistandard"
  }
}
